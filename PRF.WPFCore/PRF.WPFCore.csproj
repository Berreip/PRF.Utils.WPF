<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <Authors>Berreip</Authors>
    <Company>PRF</Company>
    <Description>Provide basic classes for WPF application as well as built-in converters, validations rules, tree helpers, etc. (.NET Core version)</Description>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/Berreip/PRF.Utils.WPF</PackageProjectUrl>
    <PackageIcon>PRF_Core_Component_Icon.png</PackageIcon>
    <PackageTags>WPF, ObservableCollectionRanged, LiveCollection</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>3.0.0</Version>
    <AssemblyVersion>3.0.0.0</AssemblyVersion>
    <FileVersion>3.0.0.0</FileVersion>
    <PackageVersion>3.0.0</PackageVersion>
    <PackageReleaseNotes>Change RaiseCanExecute to void</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PRF.Utils.CoreComponents" Version="2.2.1" />
    <PackageReference Include="PRF.Utils.Injection" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Ressources\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="Ressources\PRF_Core_Component_Icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
